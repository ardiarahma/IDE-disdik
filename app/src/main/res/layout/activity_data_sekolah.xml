<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataSekolahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/blue_corner_bottom">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Data Sekolah"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_searchBySchoolName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/blue_corner"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="Cari sekolah berdasarkan nama"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/btn_jakpus"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/jakpus"
                    android:clickable="true" />

                <View
                    android:id="@+id/btn_jakut"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/jakut"
                    android:clickable="true" />

                <View
                    android:id="@+id/btn_jakbar"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/jakbar"
                    android:clickable="true" />

                <View
                    android:id="@+id/btn_jaksel"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/jaksel"
                    android:clickable="true" />

                <View
                    android:id="@+id/btn_jaktim"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/jaktim"
                    android:clickable="true" />

                <View
                    android:id="@+id/btn_p1000"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:background="@drawable/p1000"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>